<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:paddingLeft="14dp"
        android:paddingTop="16dp"
        android:paddingBottom="14dp"
        android:text="Xét lương nhân viên"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview16"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MANV:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        android:paddingLeft="14dp" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_ma_nhan_vien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="0000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textview16"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />
    <TextView
        android:textColor="@color/white"
        android:id="@+id/textview17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ tên:"
        android:textSize="20sp"
        android:paddingLeft="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview16"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_ho_ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyễn Văn A"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textview17"
        app:layout_constraintTop_toBottomOf="@+id/tv_ma_nhan_vien"
        android:paddingLeft="10dp"/>
    <Button
        android:id="@+id/them"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ho_ten"
        android:layout_marginRight="30dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_luong"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/them" />


</androidx.constraintlayout.widget.ConstraintLayout>