<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:contentDescription="@string/avatar"
        android:id="@+id/avartar"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="101dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="101dp"
        android:textColor="@color/white"
        android:text="@string/app_name"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/birth_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="128dp"
        android:textColor="@color/white"
        android:text="@string/SN"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="155dp"
        android:textColor="@color/white"
        android:text="@string/MANV"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageButton
        android:id="@+id/setting"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="352dp"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_settings_24_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="260dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="vertical"
        android:background="@color/gray">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thong_tin_chung"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="26dp"
            android:paddingBottom="14dp"/>
        <TextView
            android:id="@+id/gioi_tinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gioi_tinh"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="25dp"/>
        <TextView
            android:id="@+id/cccd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cccd"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="25dp"/>
        <TextView
            android:id="@+id/dia_chi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dia_chi"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="25dp"/>
        <TextView
            android:id="@+id/ngay_vao_lam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ngay_vao_lam"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="25dp"/>
        <TextView
            android:id="@+id/phong_ban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Phong_ban"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thong_tin_lien_lac"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="25dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"/>
        <TextView
            android:id="@+id/sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sdt"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="25dp"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="25dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>