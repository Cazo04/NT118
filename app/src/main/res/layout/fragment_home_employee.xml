<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="#000000"
    tools:context=".HomeEmployee">



    <Button
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:id="@+id/btn_lich_nhan_vien"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Lịch làm việc"
        android:textColor="@color/black1"
        android:backgroundTint="@color/white"
        android:layout_marginTop="150dp"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:id="@+id/btn_luong_nhanvien"
        android:text="Bảng lương"
        android:textColor="@color/black1"
        android:backgroundTint="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        />

    <Button
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:id="@+id/btn_vietdon"
        android:text="Viết đơn"
        android:textColor="@color/black1"
        android:backgroundTint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_lich_nhan_vien"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:id="@+id/btn_xu_ly_vi_pham"
        android:text="Vi phạm"
        android:textColor="@color/black1"
        android:backgroundTint="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_luong_nhanvien"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:id="@+id/btn_y_kien"
        android:text="Ý kiến"
        android:textColor="@color/black1"
        android:backgroundTint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_vietdon"
        android:layout_marginTop="20dp">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>