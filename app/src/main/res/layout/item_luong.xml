<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">
    <TextView
        android:id="@+id/tv_ky_thanh_toan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/12/2023"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/silver"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_ky_thanh_toan"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/tv_tong_luong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng: 5000000đ"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_trang_thai_thanh_toan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã thanh toán"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_ngay_thanh_toan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18/12/2023"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:layout_marginLeft="210dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>