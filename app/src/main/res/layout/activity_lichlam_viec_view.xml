<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".LichlamViecView"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"


    android:layout_height="match_parent"

    android:background="@android:color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"


        android:layout_height="wrap_content">



        <TextView


            android:id="@+id/tv_title"


            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"

            android:text="Lịch làm việc"
            android:textColor="#FFFFFF"

            android:textAlignment="center"


            android:textSize="20sp" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">


        <LinearLayout


            android:layout_width="match_parent"


            android:layout_height="wrap_content"


            android:orientation="vertical"/>


    </LinearLayout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/buttonT2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T2"

            android:background="@drawable/vien"
            android:layout_marginLeft="10dp"

            ></Button>

        <Button
            android:id="@+id/buttonT3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T3"             android:background="@drawable/vien"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/buttonT4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T4"             android:background="@drawable/vien"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/buttonT5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T5"             android:background="@drawable/vien"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/buttonT6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T6"             android:background="@drawable/vien"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/buttonT7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T7"             android:background="@drawable/vien"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"


        android:layout_height="match_parent" />


</LinearLayout>